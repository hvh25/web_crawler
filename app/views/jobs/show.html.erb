<div class="container-fluid">  
    <div class="row-fluid">  
        <div class="span2" style ="padding-top:100px;position:fixed;">
          
          <strong>Similar jobs</strong><br><br>
          <% if not @job.base_url.nil? %>
            <% @job.base_url.jobs.sample(5).each do |job| %>
            <li><%= link_to job.title, job, :target => "_blank"  %></li>
            <% end %>       
          <% elsif not @job.user.nil? %>
            <% @job.user.jobs.sample(5).each do |job| %>
              <%= link_to job.title, job, :target => "_blank"  %><br>
            <% end %>
          <% end %>
        </div>
        
        <div id='detail' class="span8" style = "margin-left:200px;">
          <%- model_class = @job.class -%>
              <h2><%= @job.title %> </h2>
              <h3><%= @job.company %> - <%= @job.location %></h3>
              <div id="fb-root"></div>
                  <div class="fb-like" data-send="true" data-layout="button_count" data-width="450" data-show-faces="true" data-font="lucida grande"></div>
                  <em>to your friends and/or facebook pages & groups</em>
              <br>
              <br>

              <div id='description'><h3><%= model_class.human_attribute_name(:description) %>:</strong></h3><br>
                <%= h(@job.description).gsub(/\n/, '<br/>').html_safe %> 
              </div>

              <% if @job.requirement != 'See Above' %>
                <div id='requirement'>  <h3><%= model_class.human_attribute_name(:requirement) %>:</strong></h3>
                  <%= h(@job.requirement).gsub(/\n/, '<br/>').html_safe %> 
                </div>
                
              <% end %>
              <% if @job.url != nil && @job.url.include?('internship.edu.vn') == false %>
              <%= link_to 'Apply Now',@job.url, :class => 'btn btn-primary' %><% end %>
              <% if @job.url == nil %>
              <p><%= link_to "Apply Now", [:new, @job, :jobapp], :class => 'btn btn-primary' %></p><% end %>
              
              <div class="form-actions">
                <% if can? :edit, @job %>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_job_path(@job), :class => 'btn' %>
                <% end %>
                <% if can? :destroy, @job %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            job_path(@job),
                            :method => 'delete',
                            :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                            :class => 'btn btn-danger' %>
                <% end %> <!--- if permitted to -->            
              </div>
        </div>
    </div>
</div>        