<div class="container-fluid">  
    <div class="row-fluid">  
        <div class="span2">.</div>
        <div class="span8"><br>
          <br>

          <h2>Sign up or <%= link_to 'facebook | One-click sign up', user_omniauth_authorize_path(:facebook), :class => 'btn btn-primary' %></h2>
              <br>
              <br>
              <br>

                <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                  <%= f.error_notification %>

                  <div class="form-inputs">
                    <%= f.input :lastname, :required => true,:placeholder => "last & middle name" %> <%= f.input :firstname, :required => true %>
                    <%= f.input :email, :required => true, :autofocus => true, :placeholder => "your MAIN one for job updates" %>
                      
                    <% if f.object.password_required? %>
                	    <%= f.input :password, :required => true, :placeholder => "at least 8 characters" %>
                	    <%= f.input :password_confirmation, :required => true %>
                    <% end %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Sign up" %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
        </div>
    </div>
</div>

