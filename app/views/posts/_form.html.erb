<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :posttype, collection: ['CV/Resume','Interview','Career Path'], :required => true %>
    <%= f.text_area :content, class: 'tinymce', :cols => 190 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= tinymce %>