<%= simple_form_for [@job, @jobapp],:url => job_jobapps_path, :html => { :multipart => true } do |f| %>
  <% if @jobapp.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @jobapp.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :education, :input_html => {:style => 'width: 450px', :rows => 10} %>
  <%= f.input :experience, :input_html => {:style => 'width: 450px', :rows => 15} %>
  <%= f.input :skill, :input_html => {:style => 'width: 450px', :rows => 7} %>
  <%= f.input :other, :input_html => {:style => 'width: 450px', :rows => 7} %>
  <strong style="margin-left:65px"> Please attach your resume (pdf)</strong>
  <br><strong style="margin-left:120px"><%= f.file_field :resume %></strong>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                job_path(@jobapp.job), :class => 'btn' %>
  </div>
<% end %>
